    function sendDataToBackend(recognizedLabel, duration) {
        fetch('/storeData', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({
                recognizedLabel: recognizedLabel,
                timeSpent: duration
