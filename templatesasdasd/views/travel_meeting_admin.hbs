</body>

</html>
<style>
    .calendarBox1 {
        display: inline-block;
    }

    .calendarBox1 label {

        font-weight: bold;
        margin-bottom: 5px;
    }

    .calendarBox1 input[type="date"] {
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 4px;
        width: 100%;
        box-sizing: border-box;
        font-size: 14px;
    }

    .calendarBox1 input[type="date"]:focus {
        border-color: #007bff;
        outline: none;
    }



    .dropdown {
        position: relative;
        display: inline-block;
    }

    .dropbtn {
        background-color: white;
        /* color: white; */
        padding: 10px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 0.875rem;
    }

    .dropdown-content {
        display: none;
        position: absolute;
        background-color: #f9f9f9;
        min-width: 200px;
        box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
        z-index: 1;
    }

    .user-option {
        padding: 10px;
        border-bottom: 1px solid #ddd;
        display: flex;
        flex-direction: column;
    }

    .user-name {
        font-weight: bold;
    }

    .user-email {
        font-size: 0.8em;
        color: #777;
    }

    .dropdown:hover .dropdown-content {
        display: block;
    }
</style>

<script>
    const tableColors = ['table-primary', 'table-success', 'table-danger', 'table-warning', 'table-info'];

    const tableBody = document.getElementById('userTableBody');
    const rows = tableBody.getElementsByTagName('tr');

    for (let i = 0; i < rows.length; i++) {
        const randomColor = tableColors[Math.floor(Math.random() * tableColors.length)];
        rows[i].classList.add(randomColor);
    }


</script>