<script>
    const tableColors = ['table-primary', 'table-success', 'table-danger', 'table-warning', 'table-info'];

    const tableBody = document.getElementById('userTableBody');
    const rows = tableBody.getElementsByTagName('tr');

    for (let i = 0; i < rows.length; i++) {
        const randomColor = tableColors[Math.floor(Math.random() * tableColors.length)];
        rows[i].classList.add(randomColor);
    }
</script>
<script>
    function showMap(clientName, lat, lon) {
        const url = `https://www.google.com/maps?q=${lat},${lon}&query=${clientName}`;
        window.open(url, '_blank');
    }
</script>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Get the select element
        var statusFilter = document.getElementById('statusFilter');

        // Get the table body
        var userTableBody = document.getElementById('userTableBody');

        // Get all rows in the table
        var rows = document.querySelectorAll('#userTable tbody tr');

        // Event listener for the select element
        statusFilter.addEventListener('change', function () {
            // Get the selected value
            var selectedStatus = statusFilter.value.toLowerCase();

            // Iterate through each row in the table
            rows.forEach(function (row) {
                // Get the lead status cell in the current row
                var leadStatusCell = row.querySelector('td:nth-child(6)');

                // Get the lead status value
                var leadStatus = leadStatusCell.textContent.toLowerCase();

                // Check if the selected status is 'all' or matches the lead status in the row
                if (selectedStatus === 'all' || leadStatus === selectedStatus) {
                    // Show the row
                    row.style.display = '';
                } else {
                    // Hide the row
                    row.style.display = 'none';
                }
            });
        });
    });
</script>
