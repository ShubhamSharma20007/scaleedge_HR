<script>
    document.getElementById('downloadExcel').addEventListener('click', function (event) {
    event.preventDefault(); // Prevent default link behavior

    const selectedUserName = document.getElementById('user_name').value;
    const selectedMonthYear = document.getElementById('calendarInput').value;
    const startDateString = document.getElementById('startDate').value;
    const endDateString = document.getElementById('endDate').value;

    // Filtered data based on selected criteria
    const filteredData = [];

    const rows = document.querySelectorAll('#userTableBody tr');

    rows.forEach(row => {
        const userName = row.cells[1].textContent;
        const dateCell = row.cells[2].textContent;
        const time = row.cells[3].textContent;
        const type = row.cells[4].textContent;
        if (
            (selectedUserName === "" || userName === selectedUserName) &&
            (selectedMonthYear === "" || dateCell.startsWith(selectedMonthYear)) &&
            ((new Date(dateCell) >= new Date(startDateString)) && (new Date(dateCell) <= new Date(endDateString)))
        ) {
            filteredData.push([userName, dateCell, time, type]);
        }
    });

    const wb = XLSX.utils.book_new();
    const ws = XLSX.utils.aoa_to_sheet([['Name', 'Date', 'Time', 'Type'], ...filteredData]);
    XLSX.utils.book_append_sheet(wb, ws, 'Report');

    const excelBuffer = XLSX.write(wb, { bookType: 'xlsx', type: 'array' });

    const blob = new Blob([excelBuffer], { type: 'application/vnd.openxmlformats-officedocument.spreadsheetml.sheet' });

    const fileName = selectedUserName === "" ? `attendance_report_${selectedMonthYear}.xlsx` : `attendance_report_${selectedUserName}_${selectedMonthYear}.xlsx`;

    const link = document.createElement('a');
    link.href = URL.createObjectURL(blob);
    link.download = fileName;
    document.body.appendChild(link);
    link.click();
    document.body.removeChild(link);
});

</script>


