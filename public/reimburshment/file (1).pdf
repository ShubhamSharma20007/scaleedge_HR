<script>
    $(document).ready(function () {
        $('.view-btn').click(function () {
            var employeeId = $(this).data('employee-id');
            var employeeName = $(this).data('employee-name');
            var date = $(this).data('date');
            var amount = $(this).data('amount');
            var incentives = $(this).data('incentives');
            var remarks = $(this).data('remarks');

            $('#employeeId').val(employeeId);
            $('#employeeName').val(employeeName);
            $('#date').val(date);
            $('#amount').val(amount);
            $('#incentives').val(incentives);
            $('#remarks').val(remarks);
        });

        $('#editForm').submit(function (event) {
            event.preventDefault();
            var employeeId = $('#employeeId').val();
            var employeeName = $('#employeeName').val();
            var date = $('#date').val();
            var amount = $('#amount').val();
            var incentives = $('#incentives').val();
            var remarks = $('#remarks').val();

            // Adding one month to the date
            var nextMonthDate = new Date(date);
            nextMonthDate.setMonth(nextMonthDate.getMonth() + 1);
            var formattedNextMonthDate = nextMonthDate.toISOString().split('T')[0];

            // Update table row with edited details
            var row = $('#userTableBody').find('tr').filter(function () {
                return $(this).find('td:eq(0)').text() === employeeId;
            });
            row.find('td:eq(1)').text(employeeName);
            row.find('td:eq(2)').text(formattedNextMonthDate); // Updated with next month date
            row.find('td:eq(3)').text(amount);
            row.find('td:eq(4)').text(incentives);
            row.find('td:eq(5)').text(remarks);

            // Close modal
            $('#viewModal').modal('hide');

            // Perform AJAX request to store form data in arrears table and update arrears_for_users table
            $.ajax({
                type: "POST",
                url: "/storeArrearsData",
                data: {
                    employeeId: employeeId,
                    employeeName: employeeName,
                    arrearsAmount: amount,
                    incentives: incentives,
                    dateOfApply: formattedNextMonthDate // Send next month date
                },
                success: function (response) {
                    $('#viewModal').modal('hide');
                    Swal.fire({
                        icon: 'success',
                        title: 'Success!',
                        text: 'Data stored successfully in arrears table',
                        timer: 1500, // 1.5 seconds
                        timerProgressBar: true,
                        showConfirmButton: false
                    }).then((result) => {
                        // Reload the page after showing the alert
                        location.reload();
                    });
                },
                error: function (xhr, status, error) {
                    console.error("Error storing data in arrears table:", error);
                    // Show error message using SweetAlert
                    Swal.fire({
                        icon: 'error',
                        title: 'Error!',
                        text: 'Failed to store data in arrears table'
                    });
                }
            });
        });
    });
</script>

